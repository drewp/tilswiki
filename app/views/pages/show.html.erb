<% throw_content(:for_head) do %>
<title><%= @title %></title>
<script src="/javascripts/page.js" type="text/javascript"></script>
<% end %>

<div class="panel">
<ul class="panel">

<li><a class="h1" title="Make current line a big heading"><!-- --></a></li>
<li><a class="h2" title="Make current line a medium heading"><!-- --></a></li>
<li><a class="h3" title="Make current line a small heading"><!-- --></a></li>

<li><a class="bold" title="Make selected text bold"><!-- --></a></li>
<li><a class="italic" title="Make selected text italic"><!-- --></a></li>

<li class="break"><a class="colorRed" title="Make selected text red"><!-- --></a></li>
<li><a class="colorGreen" title="Make selected text green"><!-- --></a></li>
<li><a class="colorBlue" title="Make selected text blue"><!-- --></a></li>

<li><a class="increaseFontSize" title="Make selected text larger"><!-- --></a></li>
<li><a class="decreaseFontSize" title="Make selected text smaller"><!-- --></a></li>

<li class="break"><a class="insertHorizontalRule" title="Insert horizontal rule"><!-- --></a></li>

<li class="break"><a class="insertImage thickbox" title="Insert images" 
    href="#TB_inline?height=300&width=300&inlineId=imageUpload"><!-- --></a></li>
</ul>
<p class="progress"></p>
</div>

<div id="wysiwyg" contenteditable="true">
<%= @content -%>
</div>


<div id="imageUpload">
<%= form :action => '/' / params[:page], :method => 'POST', :enctype => 'multipart/form-data' do %>
  <input type="file" name="files[]" />
  <br />
  <p class="more">
    <a href="#">+ upload more</a>
  </p>
  <p>
    <input type="submit" value="OK" />
    <a href="#" class="cancel">Cancel</a>
  </p>
<% end =%>
</div>
