!!! Strict
%html{ html_attrs("en_us") }
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "content-type" }
    %meta{ :name => "viewport", :content => "width=device-width" }
    %link{ :rel => "icon", :href => "/images/favicon.png", :type => "image/png" }

    = stylesheet_link_tag "screen",                            :media => :screen
    = stylesheet_link_tag "/thickbox/thickbox",                :media => :screen
    = stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.6/themes/base/jquery-ui.css", :media => :screen

    = stylesheet_link_tag "print",  :media => :print

    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js"
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.6/jquery-ui.min.js"
    = javascript_include_tag "jquery.form-2.18.js"
    = javascript_include_tag "thickbox-compressed.js"

    = yield :head

  %body{:id=> yield(:page_id) || 'body'}

    = yield

    .clear
