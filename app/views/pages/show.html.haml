- throw_content(:for_head) do
  %title= @page.title
  %script{ :src => "/javascripts/page.js", :type => "text/javascript" }
  = css_include_tag :page

- if @version
  #panel
    %h1
      Version
      = @version.id
      ,
      = time_ago_in_words(@version.created_at)
      ago
- else
  = partial('panel')

#wysiwyg{:contenteditable => "true"}
  = @page.body

#imageUpload
  = form :action => '/' / params[:handle], :method => 'POST', :enctype => 'multipart/form-data' do
    %input{ :name => "files[]", :type => "file" }
    %br
    %p.more
      %a{ :href => "#" }
        + upload more
    %p
      %input{:type=>'submit', :value=>'OK'}
      %a.cancel{:href=>"#"} Cancel

#changeURL
  %h3 Current URL of this page
  %p.url= "http://wiki.tils.net/<em>#{params[:handle]}</em>"

  %h3 Change it to
  = form :action => '/', :method => 'PUT' do
    %p
      %span.url http://wiki.tils.net/
      = hidden_field :name => 'handle', :value => params[:handle]
      = text_field :name => 'new_handle', :value => @page.title.gsub(/[^\w]+/, '_').downcase
    %p.help
      Don't worry: the old URL will be remembered, and it will redirect to the new URL.
    %p
      = submit 'OK'
      %a.cancel{:href=>"#"} Cancel
