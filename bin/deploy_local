#!/bin/sh

export LD_LIBRARY_PATH=/usr/local/lib

echo "Running deploy_local"

git reset --hard

bin/rake db:autoupgrade

# Run this only when needed. Hmm - manually propably.
#bin/thor merb:gem:redeploy

kill `cat log/merb.4000.pid`

sleep 2

bin/merb -p 4000 -a thin < /dev/null > nohup.out 2>&1 &


echo "Done."
