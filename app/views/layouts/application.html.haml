!!! Strict
%html{ html_attrs("en_us") }
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "content-type" }
    %meta{ :name => "viewport", :content => "width=device-width" }
    %link{ :rel => "icon", :href => "/images/favicon.png", :type => "image/png" }

    = stylesheet_link_tag "screen",                            :media => :screen
    = stylesheet_link_tag "/thickbox/thickbox",                :media => :screen
    = stylesheet_link_tag "/jquery-ui/jquery-ui-1.7.1.custom.css", :media => :screen

    = stylesheet_link_tag "print",  :media => :print

    = javascript_include_tag "jquery-1.4.3.min.js"
    = javascript_include_tag "jquery-ui-1.7.1.custom.min.js"
    = javascript_include_tag "jquery.form-2.18.js"
    = javascript_include_tag "thickbox-compressed.js"

    = yield :head

  %body{:id=> yield(:page_id) || 'body'}

    = yield

    .clear

    %p.footer
      Powered by:
      %a{ :href => "http://wiki.tils.net/"}
        %strong tilswiki
